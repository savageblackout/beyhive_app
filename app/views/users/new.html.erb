<img id= "sign_up_image" src="https://i.imgur.com/6xAzS8I.jpg" class="img-responsive">
<div class="container" id="sign_up_container">
  <h1 class="text-center">Sign Up!</h1>

  <div class="col-md-4 col-md-offset-4">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label :f_name, "First Name" %>
        <input class="form-control" placeholder="First Name" <%=f.text_field :f_name %>
      </div>
      <div class="form-group">
        <%= f.label :l_name, "Last Name" %>
        <input class="form-control" placeholder="Last Name" <%=f.text_field :l_name %>
      </div>
      <div class="form-group">
        <%= f.label :email, "email" %>
        <input class="form-control" placeholder="email" <%=f.text_field :email %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password" %>
        <input class="form-control" placeholder="Password" <%=f.text_field :password %>
      </div>
        <div class="form-group">
        <%= f.label :password_confirmation, "Password Confirmation" %>
        <input class="form-control" placeholder="Please enter your password again!" <%=f.text_field :password_confirmation %>
      </div>
       <div class="actions"><%= f.submit "Submit!", {class: "btn btn-primary"} %></div>
  </div>
</div>
    <% end %>

<% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul class="list-unstyled">
        <% for message in @user.errors.full_messages %>
          <%= message %>
        <% end %>
      </ul>
<% end %>
