<div class="container">
  <h1 class="text-center">Add a new post!</h1>

  <div class="col-md-4 col-md-offset-4">
    <%= form_for @post, html: { multipart: true } do |f| %>
     <div class="form-group">
        <%= f.label :title, "Title" %>
        <input class="form-control" placeholder="Title" <%=f.text_field :title %>
      </div>
      <div class="form-group">
        <%= f.label :text_post, "Text Post" %>
        <input class="form-control" id="text_box" placeholder="Text Post" <%=f.text_field :text_post %>
      </div>
      <div class="form-group">
        <%= f.label :embed_url, "YouTube Link" %>
        <input class="form-control" placeholder="Youtube Link" <%=f.text_field :embed_url%>
      </div>
      <div class="form-group">
         <%= f.label :photo, "Photo File" %>
        <input class="form-control" placeholder="Photo URL" <%=f.file_field :photo %>
      </div>
      <div class="actions"><%= f.submit "Submit!" %></div>
  </div>
   <% end %>
</div>


<% if @post.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
        <ul class="list-unstyled">
          <% for message in @post.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
<% end %>
